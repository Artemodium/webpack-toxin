include ../../components/date-fields/date-fields.pug
include ../../components/dropdown/dropdown.pug
include ../../components/buttons/button.pug

mixin booking-room-card()
    div.booking-room-card__wrapper
        div.booking-room-card-border
            div.booking-room-card__container
                div.booking-room-card__header
                    p.booking-room-card__header-text-right
                        span.header-text-right__number-symb= '№ '
                        span.header-text-right__number= '888' 
                        span.header-text-right__type= 'люкс'
                    p.booking-room-card__header-text-left
                        span.header-text-left__price= '9 990₽ '
                        span.header-text-left__day= 'в сутки'
                div.booking-room-card__dates
                    +date-fields({size: 'short', title:'прибытие', placeholder:'19.08.2019', id:9, date_picker:"single"})
                    +date-fields({size: 'short', title:'выезд', placeholder:'23.08.2019', id:10, date_picker:"single"})
                div.booking-room-card__guests
                    +dropdown({type: ' guests', status:'', size:'large', title:'гости', comment:'', placeholder:'3 гостя', checkmark:true})
                div.booking-room-card__bill
                    div.bill__room 
                        span.bill__room-text= '9 990₽ х 4 суток'
                        span.bill__room-count= '39 960₽'
                    div.bill__discount
                        div.bill__discount-desc
                            span.bill__discount-text= 'Сбор за услуги: скидка 2 179₽  '
                            span.bill__discount-info= 'i'
                        span.bill__discount-count= ' 0₽'
                    div.bill__add-services 
                        div.bill__add-services-desc
                            span.bill__add-services-text= 'Сбор за дополнительные услуги '
                            span.bill__add-services-info= 'i'
                        span.bill__add-services-count= '300₽'
                    div.bill__total
                        span.bill__total-desc-text= 'Итого'
                        span.bill__total-desc-line
                        span.bill__total-desc-count= '38 081₽'
                div.booking-room-card__booking-button
                    +button({theme: '_painted', font: '_white-font', placeholder: 'забронировать', size: 'large', isArrow: true})
                